@{
    ViewData["Title"] = "Completed";
    Layout = "_Layout";
}
@model Models.CompletedViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Completed Todos</title>
</head>
<body>
    <div>
        <h1 style="margin-top: 1em; margin-bottom: 1em">Completed Todos</h1>
        @foreach (var item in @Model.CompletedTodoModels)
        {
            <h5 style="margin-top: 1em"><b>@item.Text</b></h5>
            <h6>@item.DateCompleted</h6>
            @Html.ActionLink("Remove from completed", "RemoveFromCompleted", item)
        }

    </div>
    <a asp-controller="Todo" asp-action="Index" style="margin-top: 5em; margin-bottom: 5em"><b>Back</b></a>
</body>
</html>
